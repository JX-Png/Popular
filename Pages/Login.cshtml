@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Popular Bookstore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .header-container {
            background-color: #ffe0e0; /* Light pink background */
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ddd;
        }

        .header-title {
            font-size: 2em;
            font-weight: bold;
            color: #333;
        }

        .admin-login-link {
            font-size: 0.9em;
            color: #007bff;
            text-decoration: none;
        }

            .admin-login-link:hover {
                text-decoration: underline;
            }

        .login-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding-top: 40px;
        }

        .icon-placeholder {
            width: 150px;
            height: 150px;
            border: 2px solid black;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
            font-size: 1.2em;
            color: #666;
        }

        .form-group {
            margin-bottom: 15px;
            width: 300px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .login-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 300px;
            margin-top: 10px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
            text-decoration: none;
            text-align: center;
            border: 1px solid;
        }

        .btn-login {
            background-color: #90ee90; /* Light green */
            border-color: #77cc77;
            color: #333;
        }

        .btn-create-account {
            background-color: #ffe0b2; /* Light orange/yellow */
            border-color: #ffcc80;
            color: #333;
        }

        .forgot-password-link {
            font-size: 0.9em;
            color: #007bff;
            text-decoration: none;
            display: block;
            width: 300px;
            margin-bottom: 20px;
        }

        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="header-container">
        <div class="header-title">Popular Bookstore</div>
        <a href="/AdminLogin" class="admin-login-link">Administrator Login</a>
    </div>

    <div class="login-container">
        <div class="icon-placeholder">
            Icon
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" placeholder="Enter mail" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Enter Password" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <a href="#" class="forgot-password-link">Forget password?</a>
            </div>
            <div class="login-actions">
                <button type="submit" class="btn btn-login">Login</button>
                <a asp-page="/CreateAccount" class="btn btn-create-account">Create Account</a>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>