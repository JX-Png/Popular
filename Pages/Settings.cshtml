@page
@model PopularBookstore.Pages.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<partial name="_Header" />

<style>
    .settings-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .payment-cards {
        margin-top: 30px;
    }

    .card-list {
        margin-top: 20px;
    }

    .payment-card {
        border: 2px solid #ffe0e0;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        background-color: #fff9f9;
        position: relative;
    }

    .payment-card-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .payment-card-info {
        flex: 1;
    }

    .payment-card-actions {
        display: flex;
        gap: 10px;
    }

    .default-badge {
        background-color: #28a745;
        color: white;
        font-size: 0.8em;
        padding: 3px 8px;
        border-radius: 10px;
        margin-left: 10px;
    }

    .card-form-container {
        margin-top: 30px;
        border: 2px solid #ffe0e0;
        border-radius: 8px;
        padding: 20px;
        background-color: #fff9f9;
    }

    .card-form-header {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: 500;
        }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .expiry-date-container {
        display: flex;
        gap: 10px;
    }

        .expiry-date-container .form-control {
            width: auto;
        }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        border: none;
        font-size: 1em;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-outline-secondary {
        background-color: transparent;
        border: 1px solid #6c757d;
        color: #6c757d;
    }

    .add-card-button {
        margin-top: 15px;
    }

    .validation-message {
        color: #dc3545;
        font-size: 0.9em;
        margin-top: 5px;
    }

    .alert {
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .alert-success {
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
    }
</style>

<div class="settings-container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success">
            @Model.StatusMessage
        </div>
    }

    <div class="payment-cards">
        <h3>Payment Methods</h3>

        @if (!Model.UserCards.Any())
        {
            <p>You don't have any payment methods saved yet.</p>
        }
        else
        {
            <div class="card-list">
                @foreach (var card in Model.UserCards)
                {
                    <div class="payment-card">
                        <div class="payment-card-content">
                            <div class="payment-card-info">
                                <h4>
                                    @card.CardName
                                    @if (card.IsDefault)
                                    {
                                        <span class="default-badge">Default</span>
                                    }
                                </h4>
                                <div>@card.GetMaskedCardNumber()</div>
                                <div>@card.CardholderName</div>
                                <div>Expires: @card.ExpiryMonth/@card.ExpiryYear</div>
                            </div>
                            <div class="payment-card-actions">
                                <form method="post" asp-page-handler="SetDefaultCard" asp-route-cardId="@card.Id" style="display:@(card.IsDefault ? "none" : "block")">
                                    <button type="submit" class="btn btn-outline-secondary">Set Default</button>
                                </form>
                                <a href="?editId=@card.Id" class="btn btn-primary">Edit</a>
                                <form method="post" asp-page-handler="DeleteCard" asp-route-cardId="@card.Id" onsubmit="return confirm('Are you sure you want to delete this card?');">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        @if (Model.EditCardId.HasValue)
        {
            <div class="card-form-container">
                <div class="card-form-header">
                    <h3>Edit Payment Method</h3>
                </div>

                <form method="post" asp-page-handler="UpdateCard" asp-route-cardId="@Model.EditCardId">
                    <div class="form-group">
                        <label asp-for="CardInput.CardName"></label>
                        <input asp-for="CardInput.CardName" class="form-control" />
                        <span asp-validation-for="CardInput.CardName" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CardInput.CardNumber"></label>
                        <input asp-for="CardInput.CardNumber" class="form-control" placeholder="Leave blank to keep existing number" />
                        <span asp-validation-for="CardInput.CardNumber" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CardInput.CardholderName"></label>
                        <input asp-for="CardInput.CardholderName" class="form-control" />
                        <span asp-validation-for="CardInput.CardholderName" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label>Expiry Date</label>
                        <div class="expiry-date-container">
                            <input asp-for="CardInput.ExpiryMonth" class="form-control" placeholder="MM" maxlength="2" />
                            <span>/</span>
                            <input asp-for="CardInput.ExpiryYear" class="form-control" placeholder="YY" maxlength="2" />
                        </div>
                        <span asp-validation-for="CardInput.ExpiryMonth" class="validation-message"></span>
                        <span asp-validation-for="CardInput.ExpiryYear" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label>
                            <input type="checkbox" asp-for="CardInput.IsDefault" /> Set as default payment method
                        </label>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-success">Save Changes</button>
                        <a href="/Settings" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        }
        else
        {
            <div class="card-form-container">
                <div class="card-form-header">
                    <h3>Add New Payment Method</h3>
                </div>

                <form method="post" asp-page-handler="AddCard">
                    <div class="form-group">
                        <label asp-for="CardInput.CardName"></label>
                        <input asp-for="CardInput.CardName" class="form-control" />
                        <span asp-validation-for="CardInput.CardName" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CardInput.CardNumber"></label>
                        <input asp-for="CardInput.CardNumber" class="form-control" placeholder="1234567890123456" />
                        <span asp-validation-for="CardInput.CardNumber" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CardInput.CardholderName"></label>
                        <input asp-for="CardInput.CardholderName" class="form-control" />
                        <span asp-validation-for="CardInput.CardholderName" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label>Expiry Date</label>
                        <div class="expiry-date-container">
                            <input asp-for="CardInput.ExpiryMonth" class="form-control" placeholder="MM" maxlength="2" />
                            <span>/</span>
                            <input asp-for="CardInput.ExpiryYear" class="form-control" placeholder="YY" maxlength="2" />
                        </div>
                        <span asp-validation-for="CardInput.ExpiryMonth" class="validation-message"></span>
                        <span asp-validation-for="CardInput.ExpiryYear" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label>
                            <input type="checkbox" asp-for="CardInput.IsDefault" /> Set as default payment method
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary">Add Card</button>
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}