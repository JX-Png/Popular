@page
@model CreateAccountModel
@{
    ViewData["Title"] = "Create Account";
}

<style>
    
    .header-container {
        background-color: #ffe0e0; 
        padding: 10px 20px;
        text-align: left;
        margin-bottom: 20px;
    }

    .header-title {
        font-size: 2em;
        font-weight: bold;
        color: #333;
    }

    .page-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 20px;
        text-align: center;
    }

    .page-main-title {
        font-size: 2.5em;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    }

    .confirmation-message {
        font-size: 1.2em;
        color: #333;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 15px;
        width: 350px; 
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .form-actions {
        display: flex;
        justify-content: space-around; 
        width: 350px; 
        margin-top: 20px;
    }

    .btn {
        padding: 10px 25px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1em;
        text-decoration: none;
        text-align: center;
        min-width: 100px; 
    }

    .btn-confirm, .btn-login {
        background-color: #90ee90; 
        color: #333;
        border: 1px solid #77cc77;
    }

    .btn-reset {
        background-color: #ff6347; 
        color: white;
        border: 1px solid #e05030;
    }

    .text-danger {
        font-size: 0.9em;
        color: red; 
        display: block; 
        text-align: left;
    }

</style>

<div class="header-container">
    <div class="header-title">Popular Bookstore</div>
</div>

<div class="page-container">
    <div class="page-main-title">Create Account</div>

    @if (Model.ShowConfirmationMessage)
    {
        <div class="confirmation-message">
            A confirmation email has been sent to your email address.
        </div>
        <a asp-page="/Login" class="btn btn-login">Login</a>
    }
    else
    {
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" placeholder="Enter mail" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Re-enter Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Name" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Address" class="form-control" placeholder="Enter Address" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-confirm">Confirm</button>
                <button type="reset" class="btn btn-reset">Reset</button>
            </div>
        </form>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}