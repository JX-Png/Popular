@page
@model PopularBookstore.Pages.IndexModel
@{
    ViewData["Title"] = "Homepage";
}

<style>
    .main-header-container {
        background-color: #ffe0e0; 
        padding: 15px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0; 
    }

    .main-header-title {
        font-size: 2.5em;
        font-weight: bold;
        color: #333;
    }

    .cart-icon-area a {
        font-size: 2.5em; 
        color: #555;
        text-decoration: none;
    }
        
        .cart-icon-area a::before {
            content: "🛒"; 
        }


    .nav-bar {
        background-color: #f8f9fa; 
        padding: 10px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #ddd;
    }

    .nav-links { 
        display: flex;
        align-items: center; 
    }

        
        .nav-links a,
        .nav-links form button.nav-link-button {
            margin-right: 20px;
            text-decoration: none;
            color: #007bff;
            font-size: 1.1em;
            background: none; 
            border: none; 
            padding: 0; 
            cursor: pointer; 
            font-family: inherit; 
            line-height: inherit; 
            vertical-align: middle; 
        }

            .nav-links a:hover,
            .nav-links form button.nav-link-button:hover {
                text-decoration: underline;
                color: #0056b3; 
            }

        
        .nav-links form {
            display: inline; 
            margin: 0;
            padding: 0;
        }

    .search-bar-container {
        display: flex;
    }

        .search-bar-container input[type="text"] {
            padding: 8px;
            border: 1px solid #ccc;
            border-right: none;
            border-radius: 4px 0 0 4px;
            min-width: 250px;
        }

        .search-bar-container button {
            padding: 8px 12px;
            border: 1px solid #007bff;
            background-color: #007bff;
            color: white;
            cursor: pointer;
            border-radius: 0 4px 4px 0;
        }

            .search-bar-container button:hover {
                background-color: #0056b3;
            }


    .book-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); /* Responsive grid */
        gap: 25px;
        padding: 25px;
        background-color: #fff; 
    }

    .book-card {
        border: 2px solid #ffe0e0; 
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        background-color: #fff9f9; 
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

        .book-card h4 { 
            font-size: 1.1em;
            margin-bottom: 5px;
            min-height: 40px; 
        }

        .book-card .author { 
            font-size: 0.9em;
            color: #555;
            margin-bottom: 8px;
        }

        .book-card .price { 
            font-size: 1em;
            font-weight: bold;
            color: #28a745; 
            margin-bottom: 10px;
        }

    .book-image-placeholder {
        width: 100%;
        height: 200px; 
        background-color: #e9ecef; 
        border: 1px solid #ced4da;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
        overflow: hidden; 
    }

        .book-image-placeholder img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain; 
        }


    .book-actions .btn {
        background-color: #f0f0f0;
        border: 1px solid #ccc;
        padding: 8px 15px;
        margin: 5px;
        border-radius: 4px;
        text-decoration: none;
        color: #333;
        cursor: pointer;
        font-size: 0.9em;
    }

        .book-actions .btn:hover {
            background-color: #e0e0e0;
        }

</style>

<div class="main-header-container">
    <div class="main-header-title">Popular Bookstore</div>
    <div class="cart-icon-area">
        <a asp-page="/Cart" title="View Cart"></a>
    </div>
</div>

<nav class="nav-bar">
    <div class="nav-links">
        <a asp-page="/Index">Home</a>
        <a asp-page="/Promotions">Promotions</a>
        <a asp-page="/Profile">Profile</a>
        <a asp-page="/Settings">Settings</a>
        <a asp-page="/OrderHistory">Order History</a>
        @if (User.Identity != null && User.Identity.IsAuthenticated) 
        {
            <form asp-page="/Logout" method="post">
                <button type="submit" class="nav-link-button">Logout</button> @*  *@
            </form>
        }
    </div>
    <div class="search-bar-container">
        <input type="text" placeholder="Search for books..." />
        <button type="button">🔍</button> @*  *@
    </div>
</nav>


<div class="book-gallery">
    @foreach (var book in Model.Books)
    {
        <div class="book-card">
            <div class="book-image-placeholder">
                @*  *@
                <img src="@book.ImageUrl" alt="@book.Title" />
            </div>
            <h4>@book.Title</h4>
            <div class="book-actions">
                <a asp-page="/ViewInfo" asp-route-id="@book.Id" class="btn">View Info</a>
                <a asp-page="/AddToCart" asp-route-id="@book.Id" class="btn">Add to cart</a>
            </div>
        </div>
    }

</div>  