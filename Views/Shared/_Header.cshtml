@using Microsoft.AspNetCore.Identity
@using WebApplication1.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<style>
    body {
        margin: 0;
        padding: 0;
    }

    .header-wrapper {
        width: 100%;
        margin: 0;
        padding: 0;
    }

    .main-header-container {
        width: 100%;
        background-color: #ffe0e0;
        padding: 15px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 0;
        box-sizing: border-box;
    }

    .main-header-title {
        font-size: 2.5em;
        font-weight: bold;
        color: #333;
    }

    .cart-icon-area {
        font-size: 2.5em;
        color: #555;
    }

    .nav-bar {
        width: 100%;
        background-color: #f8f9fa;
        padding: 10px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #ddd;
        box-sizing: border-box;
    }

    .nav-links {
        display: flex;
        align-items: center;
    }

        .nav-links a,
        .nav-links form button.nav-link-button {
            margin-right: 20px;
            text-decoration: none;
            color: #007bff;
            font-size: 1.1em;
            background: none;
            border: none;
            padding: 0;
            cursor: pointer;
            font-family: inherit;
            line-height: inherit;
            vertical-align: middle;
        }

            .nav-links a:hover,
            .nav-links form button.nav-link-button:hover {
                text-decoration: underline;
                color: #0056b3;
            }

        .nav-links form {
            display: inline;
            margin: 0;
            padding: 0;
        }

    .search-bar-container {
        display: flex;
    }

        .search-bar-container input[type="text"] {
            padding: 8px;
            border: 1px solid #ccc;
            border-right: none;
            border-radius: 4px 0 0 4px;
            min-width: 250px;
        }

        .search-bar-container button {
            padding: 8px 12px;
            border: 1px solid #007bff;
            background-color: #007bff;
            color: white;
            cursor: pointer;
            border-radius: 0 4px 4px 0;
        }

            .search-bar-container button:hover {
                background-color: #0056b3;
            }

    .admin-login-link {
        font-size: 0.9em;
        color: #555;
        display: block;
        text-align: right;
        padding: 5px 0;
    }

    .admin-login-container {
        width: 100%;
        text-align: right;
        padding: 0 25px 10px;
        background-color: #f8f9fa;
        box-sizing: border-box;
    }
</style>

<div class="header-wrapper">
    <div class="main-header-container">
        <div class="main-header-title">Popular Bookstore</div>
        <div class="cart-icon-area">
            @await Component.InvokeAsync("CartWidget")
        </div>
    </div>

    <nav class="nav-bar">
        <div class="nav-links">
            <a asp-page="/Index">Home</a>
            <a asp-page="/Promotions">Promotions</a>
            @if (SignInManager.IsSignedIn(User))
            {
                <a asp-page="/Settings">Settings</a>
                <a asp-page="/OrderHistory">Order History</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-page="/Books/Index">Manage Books</a>
                }
            }
            <partial name="_LoginPartial" />
        </div>
        <div class="search-bar-container">
            <form method="get" asp-page="/Search">
                <input type="text" name="SearchTerm" placeholder="Search for books..." />
                <button type="submit">🔍</button>
            </form>
        </div>
    </nav>

    @if (!SignInManager.IsSignedIn(User))
    {
        <div class="admin-login-container">
            <a href="/AdminPortal" class="admin-login-link">Administrator Login</a>
        </div>
    }
</div>